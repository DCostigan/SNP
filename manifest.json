{
  "manifest_version": 2,

  "name": "Social Network Privacy",
  "description": "Protects user information from malicious intruders",
  "version": "1.0",

  "browser_action": {
    "default_icon": "/public/images/icon4.png",
    "default_title": "Customize settings for SNP",
    "default_popup": "/views/popup.html"
  },

  "background": {
    "scripts": ["/public/javascripts/background.js"]
  },

  "permissions": [ "cookies", "tabs", "http://*/*", "https://*/*" ],

  "icons": { "16": "/public/images/icon4.png", "48": "/public/images/icon4.png", "128": "/public/images/icon4.png" },

  "author": "Derek Costigan"
}
